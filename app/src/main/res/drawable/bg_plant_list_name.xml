<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/common_bg_outer_color" />
            <padding
                android:bottom="@dimen/common_bg_outer_padding"
                android:left="@dimen/common_bg_outer_padding"
                android:right="@dimen/common_bg_outer_padding"
                android:top="@dimen/common_bg_outer_padding" />
            <corners
                android:bottomRightRadius="@dimen/common_bg_bigger_radius"
                android:topRightRadius="@dimen/common_bg_bigger_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/common_bg_bigger_radius"
                android:topRightRadius="@dimen/common_bg_bigger_radius" />
            <padding
                android:bottom="@dimen/common_bg_inner_padding"
                android:left="@dimen/common_bg_inner_padding"
                android:right="@dimen/common_bg_inner_padding"
                android:top="@dimen/common_bg_inner_padding" />
            <solid android:color="@color/common_bg_inner_color" />
        </shape>
    </item>
</layer-list>